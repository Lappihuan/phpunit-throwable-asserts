{
    "name": "phrozenbyte/phpunit-throwable-asserts",
    "type": "library",
    "description": "Provides various Throwable-related PHPUnit assertions.",
    "keywords": [ "php", "phpunit", "phpunit-extension", "phpunit-assertions" ],
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel Rudolf",
            "homepage": "https://www.daniel-rudolf.de/"
        }
    ],
    "support": {
        "docs": "https://github.com/PhrozenByte/phpunit-throwable-asserts",
        "issues": "https://github.com/PhrozenByte/phpunit-throwable-asserts/issues",
        "source": "https://github.com/PhrozenByte/phpunit-throwable-asserts"
    },
    "autoload": {
        "psr-4": {
            "PhrozenByte\\PHPUnitThrowableAsserts\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhrozenByte\\PHPUnitThrowableAsserts\\Tests\\": "tests"
        }
    },
    "require": {
        "php": "^8.4"
    },
    "require-dev": {
        "php-parallel-lint/php-parallel-lint": "^1.2",
        "vimeo/psalm": "^6.8",
        "psalm/plugin-phpunit": "^0.19.2",
        "psalm/plugin-mockery": "^1.2.0",
        "phpunit/phpunit": "^11.5",
        "mockery/mockery": "^1.6",
        "symfony/yaml": "^7.2"
    }
}
